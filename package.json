{
  "name": "fingerprint-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Browser fingerprinting library with server and demo",
  "scripts": {
    "build": "pnpm -r build",
    "build:client": "pnpm --filter @anthropic/fingerprint-client build",
    "build:server": "pnpm --filter @anthropic/fingerprint-server build",
    "dev": "pnpm -r --parallel dev",
    "dev:demo": "pnpm --filter fingerprint-demo dev",
    "dev:server": "pnpm --filter @anthropic/fingerprint-server dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}
